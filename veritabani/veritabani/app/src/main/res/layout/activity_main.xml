<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ad"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/soyad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Soyad"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/ad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/yas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Yaş"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/soyad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/sehir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Şehir"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/yas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/buttonEkle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kayıt Ekle"
        app:layout_constraintTop_toBottomOf="@id/sehir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonGoster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kayıtları Göster"
        app:layout_constraintTop_toBottomOf="@id/buttonEkle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/buttonSil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kayıt Sil"
        app:layout_constraintTop_toBottomOf="@id/buttonGoster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/buttonGuncelle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kayıt Güncelle"
        app:layout_constraintTop_toBottomOf="@id/buttonSil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sonuçlar burada görünecek"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/buttonGuncelle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
